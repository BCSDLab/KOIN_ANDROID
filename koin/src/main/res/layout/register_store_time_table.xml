<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModelTime" type="in.koreatech.koin.ui.business.registerstore.viewmodel.RegisterStoreViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingPrefix">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizental_0.07"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizental_0.31"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizental_0.39"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizental_0.776"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.776" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizental_0.93"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.111"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.111" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.33"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.59"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.35"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.70"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <ImageButton
        android:id="@+id/back_button_in_basic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:src="@drawable/ic_arrow_back_for_register"

        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.07"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 등록"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/back_button_in_basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.33"
        app:layout_constraintBottom_toTopOf="@id/input_message"
        />

    <TextView
        android:id="@+id/input_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/store_register"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평일/주말 운영 시간"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_register"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_0.35"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.31"
        />

    <TextView
        android:id="@+id/day_of_week_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:text="요일"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time_textview"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizental_0.31"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.39"/>

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="108dp"
        android:text="시간"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizental_0.31"
        app:layout_constraintStart_toEndOf="@id/day_of_week_textview"
        app:layout_constraintEnd_toStartOf="@id/closed_textview"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.39"

        />

    <TextView
        android:id="@+id/closed_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:includeFontPadding="false"
        android:text="휴무"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizental_0.31"
        app:layout_constraintStart_toEndOf="@id/time_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.39"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="day_of_week_textview, time_textview, closed_textview" />


    <TextView
        android:id="@+id/monday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:includeFontPadding="false"
        android:text="월"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_title"
        tools:text="월"
      />

    <TextView
        android:id="@+id/monday_time_textview"
        android:text="@{viewModelTime.timeString}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/monday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_monday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="monday_textview, monday_time_textview" />

    <TextView
        android:id="@+id/tuesday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="화"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_monday_content" />

    <TextView
        android:id="@+id/tuesday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tuesday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_tuesday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tuesday_textview, tuesday_time_textview" />

    <TextView
        android:id="@+id/wednesday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="수"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_tuesday_content" />

    <TextView
        android:id="@+id/wednesday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/wednesday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_wednesday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="wednesday_textview, wednesday_time_textview" />

    <TextView
        android:id="@+id/thursday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="목"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_wednesday_content" />

    <TextView
        android:id="@+id/thursday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/thursday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_thursday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="thursday_textview, thursday_time_textview" />

    <TextView
        android:id="@+id/friday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="금"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_thursday_content" />

    <TextView
        android:id="@+id/friday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/friday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_friday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="friday_textview, friday_time_textview" />

    <TextView
        android:id="@+id/saturday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="토"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_friday_content" />

    <TextView
        android:id="@+id/saturday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/saturday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_saturday_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="saturday_textview, saturday_time_textview" />

    <TextView
        android:id="@+id/sunday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="일"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/day_of_week_textview"
        app:layout_constraintStart_toStartOf="@id/day_of_week_textview"
        app:layout_constraintTop_toBottomOf="@id/barrier_saturday_content" />

    <TextView
        android:id="@+id/sunday_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/sunday_textview"
        app:layout_constraintEnd_toEndOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@id/time_textview"
        android:text="@{viewModelTime.timeString}" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="270dp"
        android:id="@+id/init_time"
        app:layout_constraintTop_toBottomOf="@id/barrier_title"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.776"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/monday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:button="@null"
        android:background="@drawable/radio_button_checked_19dp"
        app:layout_constraintBaseline_toBaselineOf="@id/monday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/tuesday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/tuesday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/wednesday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/wednesday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/thursday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/thursday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/friday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/friday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/saturday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/saturday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>

    <CheckBox
        android:id="@+id/sunday_click_check_box"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/radio_button_checked_19dp"
        android:button="@null"
        app:layout_constraintBaseline_toBaselineOf="@id/sunday_textview"
        app:layout_constraintStart_toStartOf="@id/closed_textview"
        app:layout_constraintEnd_toEndOf="@id/closed_textview"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:background="@color/colorPrimary"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:fontName="Normal"
        android:layout_marginRight="16dp"
        android:layout_marginTop="75dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.93"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizental_0.776"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.70"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>