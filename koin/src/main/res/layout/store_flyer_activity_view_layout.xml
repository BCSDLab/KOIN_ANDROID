<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_flyer_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/store_flyer_background_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/store_flyer_close_imagebutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_store_flyer_close" />


    <LinearLayout
        android:id="@+id/store_flyer_before_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_gravity="start"
        android:layout_marginBottom="85dp">

        <ImageButton
            android:id="@+id/store_flyer_before_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_flyer_before_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_flyer_after_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="85dp">

    <ImageButton
        android:id="@+id/store_flyer_after_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_flyer_after_arrow" />

    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/store_flyer_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="42.5dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="42.5dp"
        android:layout_marginBottom="85dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center" />

</FrameLayout>