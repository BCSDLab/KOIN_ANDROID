<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">


    <ImageView
        android:id="@+id/splash_icon_imageview"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/ic_logo_intro"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/splash_copywrite_LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/splash_copywrite_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Copyright "
            android:textAppearance="@style/TextAppearance.Koin.Regular.13"
            android:textColor="#5a5a5a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=" @ BCSD Lab "
            android:textAppearance="@style/TextAppearance.Koin.Medium.13"
            android:textColor="#5a5a5a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="All rights reserved."
            android:textAppearance="@style/TextAppearance.Koin.Regular.13"
            android:textColor="#5a5a5a" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
