<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/signup_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingPrefix">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.063"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="46dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.044"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.044" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.889"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.889" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.100"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.100" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.188"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.28"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.719"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.76" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.100"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.100" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.789"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.111"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.111" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.922"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.922" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_0.948"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.948" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.183"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.183" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_0.817"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.817" />

        <ImageButton
            android:id="@+id/signup_back_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_black_back_arrow"
            android:tint="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_0.100"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_0.100"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.044"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_0.063"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="233dp"
            android:text="인적사항"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:fontName="Bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.111"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_0.188"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_0.28"
            />

        <TextView
            android:id="@+id/signup_user_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toTopOf="@id/signup_user_nickname_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_title"
            />

        <EditText
            android:id="@+id/signup_user_edittext_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_name_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/signup_user_name_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_name_textview"
            tools:text="홍길동" />

        <TextView
            android:id="@+id/signup_user_nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_user_name_textview" />

        <EditText
            android:id="@+id/signup_user_edittext_nick_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:imeOptions="actionNext"
            android:includeFontPadding="false"
            android:inputType="text"
            android:lineSpacingExtra="7sp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_nickname_textview"
            app:layout_constraintStart_toEndOf="@id/signup_user_nickname_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_nickname_textview"
            tools:text="anybody" />

        <LinearLayout
            android:id="@+id/signup_user_button_nickname_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_edittext_nick_name"
            app:layout_constraintStart_toEndOf="@id/signup_user_edittext_nick_name"
            app:layout_constraintTop_toBottomOf="@+id/signup_user_edittext_name">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:text="중복확인"
                android:textColor="@color/black"
                android:textSize="8sp"
                app:fontName="Custom6" />
        </LinearLayout>

        <TextView
            android:id="@+id/signup_user_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="7sp"
            android:text="성별"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_user_nickname_textview" />


        <RadioGroup
            android:id="@+id/signup_user_radiogroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_gender_textview"
            app:layout_constraintStart_toEndOf="@id/signup_user_gender_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_gender_textview">

            <RadioButton
                android:id="@+id/signup_user_radiobutton_gender_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/radio_button_checked_24dp"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="남자"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/signup_user_radiobutton_gender_woman"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="28dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/radio_button_checked_24dp"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:paddingBottom="1dp"
                android:text="여자"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/signup_user_phone_number_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="전화번호"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_user_gender_textview"/>

        <EditText
            android:id="@+id/signup_user_edittext_phone_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue1"
            android:textSize="13sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_phone_number_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/signup_user_phone_number_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_phone_number_textview" />

        <TextView
            android:id="@+id/signup_user_student_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="학번"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_user_phone_number_textview"/>

        <EditText
            android:id="@+id/signup_user_edittext_student_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue1"
            android:textSize="13sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_student_id_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/signup_user_student_id_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_student_id_textview" />

        <TextView
            android:id="@+id/signup_user_major_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="36dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="전공"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toTopOf="@id/signup_user_student_id_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_user_student_id_textview"
            app:layout_constraintVertical_bias="0" />

        <EditText
            android:id="@+id/signup_user_edittext_major"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:enabled="false"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_major_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/signup_user_major_textview"
            app:layout_constraintTop_toBottomOf="@id/signup_user_major_textview"
            tools:text="메카트로닉스공학과" />

        <TextView
            android:id="@+id/signup_user_edittext_major_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            tools:text="올바른 학번을 입력해 주세요"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="@id/signup_user_edittext_major"
            app:layout_constraintEnd_toEndOf="@id/signup_user_edittext_major"
            app:layout_constraintTop_toBottomOf="@id/signup_user_edittext_major"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/signup_user_graduate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="55dp"
            android:lineSpacingExtra="7sp"
            android:text="졸업여부"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:fontName="Custom6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_user_major_textview" />


        <RadioGroup
            android:id="@+id/signup_user_graduate_radiogroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/signup_user_graduate_textview"
            app:layout_constraintStart_toEndOf="@id/signup_user_graduate_textview"
            app:layout_constraintTop_toTopOf="@+id/signup_user_graduate_textview">

            <RadioButton
                android:id="@+id/signup_user_radiobutton_graduate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/radio_button_checked_24dp"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="졸업생"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/signup_user_radiobutton_student"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="28dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/radio_button_checked_24dp"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:paddingBottom="1dp"
                android:text="재학생"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp" />
        </RadioGroup>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_send_verification_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="이메일 인증하기"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:fontName="Regular"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_0.789"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_0.889"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_0.111"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_0.719"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_0.948"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_0.817"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_0.183"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_0.922">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:text="Copyright @ "
                android:textColor="@color/black"
                android:textSize="12sp"
                app:fontName="Custom4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:text="BCSD Lab "
                android:textColor="@color/black"
                android:textSize="12sp"
                app:fontName="Custom3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:text="All rights reserved."
                android:textColor="@color/black"
                android:textSize="12sp"
                app:fontName="Custom4" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
