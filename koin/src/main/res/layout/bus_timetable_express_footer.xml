<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_footer_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/text_view_updated_at_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_update"
            app:layout_constraintEnd_toStartOf="@id/text_view_updated_at"
            app:layout_constraintTop_toTopOf="@id/text_view_updated_at"
            app:layout_constraintBottom_toBottomOf="@id/text_view_updated_at" />

        <TextView
            android:id="@+id/text_view_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            tools:text="2024-03-19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_footer_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>