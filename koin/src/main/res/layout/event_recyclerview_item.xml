<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="158dp"
    android:layout_height="226dp"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_recyclerview_margam_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:srcCompat="@drawable/bg_margam" />

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="226dp"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_recyclerview_item_food_imageview"
                android:layout_width="158dp"
                android:layout_height="106dp"
                android:scaleType="fitXY"
                android:background="@color/gray11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_recyclerview_item_store_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="2sp"
                    android:text="옛날통닭"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/event_recyclerview_item_event_contents_textview"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="곱창 2인 주문 시 \n 볶음밥 무료 사이다"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/ic_event_mark"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/event_recyclerview_item_period_textview"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:lineSpacingExtra="3sp"
                        android:text="2019.09.02~2019.09.08"
                        android:textColor="#5e5e5e"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_recyclerview_item_published_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginRight="4dp"
                        app:srcCompat="@drawable/ic_event_bottom_icon" />

                    <TextView
                        android:id="@+id/event_recyclerview_item_publish_date_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lineSpacingExtra="2sp"
                        android:text="2019.07.31"
                        android:textColor="#9fa9b3"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/event_recyclerview_item_margam_textview"
            android:layout_width="36dp"
            android:layout_height="17dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorPrimary"
            android:text="마감"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="invisible" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>