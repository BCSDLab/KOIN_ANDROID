<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/market_used_comment_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="Normal"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/market_used_comment_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="디공구라쟁이" />

        <TextView
            android:id="@+id/market_used_comment_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="Custom4"
            android:layout_marginStart="5dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray9"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/market_used_comment_content"
            app:layout_constraintStart_toEndOf="@+id/market_used_comment_writer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2019.03.03 17:10" />


        <Button
            android:id="@+id/market_used_comment_remove"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_close"
            app:layout_constraintBottom_toTopOf="@+id/market_used_comment_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/market_used_comment_create_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_used_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="Normal"
            android:layout_marginTop="4dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/market_used_comment_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/market_used_comment_writer"
            tools:text="헐.. 복지관 서점에 있는데 바보.." />

        <Button
            android:id="@+id/market_used_comment_edit"
            android:layout_width="51.4dp"
            android:layout_height="28.7dp"
            app:fontName="Normal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_gray7_rectangle"
            android:text="수정"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/market_used_comment_content"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>







</LinearLayout>