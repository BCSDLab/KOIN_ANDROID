<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingPrefix">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizental_0.07"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizental_0.87"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.87" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.111"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.111" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.33"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.59"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.59" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.70"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.70" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.85"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.93"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />



            <ImageButton
                android:id="@+id/back_button_in_basic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:src="@drawable/ic_arrow_back_for_register"

                app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.07"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.111"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 등록"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/back_button_in_basic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.33"
                app:layout_constraintBottom_toTopOf="@id/input_message"
                />

            <TextView
                android:id="@+id/input_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록 하시려는 업체의\n메인 정보를 입력해 주세요."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/store_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.59"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_input"
                />

            <TextView
                android:id="@+id/basic_info_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 기본 정보 입력"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/input_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.33"
                app:layout_constraintBottom_toTopOf="@id/progress_bar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 / 4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/input_message"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.85"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.93"
                app:layout_constraintBottom_toTopOf="@id/progress_bar"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/basic_info_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image_register"
               />

            <ImageView
                android:id="@+id/image_register"
                android:layout_width="338dp"
                android:layout_height="200dp"
                android:background="@drawable/square_background_border_black"
                android:src="@drawable/ic_not_picture"
                android:scaleType="fitXY"
                android:layout_marginTop="32dp"
                android:layout_marginRight="33dp"
                android:layout_marginLeft="33dp"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
             />

            <TextView
                android:id="@+id/store_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게명"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/init_store_name"
                app:layout_constraintBottom_toTopOf="@id/store_address_textview"
                />

            <EditText
                android:id="@+id/init_store_name"
                android:layout_width="266dp"
                android:layout_height="39dp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="32dp"
                app:layout_constraintTop_toBottomOf="@id/image_register"
                app:layout_constraintStart_toEndOf="@id/store_name_textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/init_store_address"
                />

            <TextView
                android:id="@+id/store_address_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="주소정보"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/init_store_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/store_name_textview"
                app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.87"
                />

            <EditText
                android:id="@+id/init_store_address"
                android:layout_width="266dp"
                android:layout_height="39dp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="32dp"
                app:layout_constraintTop_toBottomOf="@id/init_store_name"
                app:layout_constraintStart_toEndOf="@id/store_address_textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.87"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:background="@color/colorPrimary"
                android:text="다음"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontName="Normal"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/init_store_address"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.70"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>