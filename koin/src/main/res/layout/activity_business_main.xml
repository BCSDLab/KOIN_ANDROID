<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="in.koreatech.koin.ui.businessmain.viewmodel.BusinessMainViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/business_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:ignore="MissingPrefix">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/toolbar"
                    style="@style/AppTheme.Toolbar.Main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_main_height">

                            <ImageView
                                android:id="@+id/image_view_koin_business_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/koin_logo_for_toolbar"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="9.23dp"
                                android:layout_marginBottom="2dp"
                                android:src="@drawable/ic_for_business"
                                app:layout_constraintBottom_toBottomOf="@id/image_view_koin_business_logo"
                                app:layout_constraintStart_toEndOf="@id/image_view_koin_business_logo" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/button_category"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_category"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/business_main_swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-24dp">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_view_store_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="32dp"
                                    android:text="@string/text_view_store_name"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_goneMarginTop="32dp" />

                                <ImageView
                                    android:id="@+id/image_view_bottom_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="32dp"
                                    android:background="@drawable/ic_bottom_arrow_black" />

                            </LinearLayout>


                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/store_open_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:elevation="@dimen/normal_card_elevation"
                                app:cardCornerRadius="0dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_view_store_name">


                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_start_store"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:text="@string/switch_business_start"
                                    android:textColor="@color/gray9"
                                    android:textOff=""
                                    android:textOn=""
                                    android:textSize="16sp"
                                    android:thumb="@drawable/thumb"
                                    app:switchMinWidth="45dp"
                                    app:thumbTextPadding="24dp"
                                    app:track="@drawable/track" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/material_card_view_order_management"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/store_open_container">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/text_view_current_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="16dp"
                                        android:text="@{vm.currentDateTime}"
                                        android:textAlignment="center"
                                        android:textColor="@color/gray9"
                                        android:textSize="16sp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <ImageView
                                        android:id="@+id/image_view_business_status_refresh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:background="@drawable/ic_business_status_refresh"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/text_view_current_date" />

                                    <View
                                        android:id="@+id/view_date_line"
                                        android:layout_width="296dp"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="16dp"
                                        android:background="#d9d9d9"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/text_view_current_date" />

                                    <TextView
                                        android:id="@+id/text_view_waiting_reception_count"
                                        android:layout_width="56dp"
                                        android:layout_height="52dp"
                                        android:layout_marginStart="24dp"
                                        android:layout_marginTop="16dp"
                                        android:textAlignment="center"
                                        android:textColor="#000000"
                                        android:textSize="35sp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/view_date_line"
                                        tools:text="0" />

                                    <TextView
                                        android:id="@+id/text_view_waiting_reception"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="@string/text_view_waiting_reception"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        app:layout_constraintStart_toStartOf="@id/text_view_waiting_reception_count"
                                        app:layout_constraintTop_toBottomOf="@id/text_view_waiting_reception_count" />

                                    <TextView
                                        android:id="@+id/text_view_waiting_payment_count"
                                        android:layout_width="56dp"
                                        android:layout_height="52dp"
                                        android:layout_marginTop="16dp"
                                        android:textAlignment="center"
                                        android:textColor="#000000"
                                        android:textSize="35sp"
                                        app:layout_constraintEnd_toStartOf="@id/text_view_finish_payment_count"
                                        app:layout_constraintStart_toEndOf="@id/text_view_waiting_reception_count"
                                        app:layout_constraintTop_toBottomOf="@id/view_date_line"
                                        tools:text="0" />

                                    <TextView
                                        android:id="@+id/text_view_waiting_payment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="@string/text_view_waiting_payment"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        app:layout_constraintStart_toStartOf="@id/text_view_waiting_payment_count"
                                        app:layout_constraintTop_toBottomOf="@id/text_view_waiting_payment_count" />


                                    <TextView
                                        android:id="@+id/text_view_finish_payment_count"
                                        android:layout_width="56dp"
                                        android:layout_height="52dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginEnd="24dp"
                                        android:textAlignment="center"
                                        android:textColor="#000000"
                                        android:textSize="35sp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/view_date_line"
                                        tools:text="0" />

                                    <TextView
                                        android:id="@+id/text_view_finish_payment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="@string/text_view_finish_payment"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        app:layout_constraintStart_toStartOf="@id/text_view_finish_payment_count"
                                        app:layout_constraintTop_toBottomOf="@id/text_view_finish_payment_count" />

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/button_go_order_management"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="16dp"
                                        android:background="@drawable/button_rect_stroke_1dp"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="9dp"
                                        android:text="@string/button_go_order_management"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="15sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/text_view_waiting_reception" />


                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_view_go_to_menu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="17dp"
                                    android:text="@string/text_view_go_to_menu"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/button_edit"
                                    android:layout_width="52dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="end"
                                    android:layout_marginEnd="16dp"
                                    android:background="@drawable/button_rect_transparent_stroke_1dp_radius_12dp"
                                    android:text="@string/text_view_edit"
                                    android:textColor="@color/gray7"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_business_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="15.57dp"
                                android:nestedScrollingEnabled="false"
                                android:overScrollMode="never"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_view_go_to_menu"
                                tools:listitem="@layout/business_menu_item" />


                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include layout="@layout/base_business_navigation_drawer_right" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
