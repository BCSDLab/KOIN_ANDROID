<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/freeboard_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <in.koreatech.koin.core.bases.KoinBaseAppbarDark
                android:id="@+id/koin_base_app_bar_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="팝니다"
                app:left_button_background="@drawable/ic_back_arrow"
                app:right_button_background="@drawable/ic_create" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/article_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/market_used_sell_edit_title_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:font_name="Normal"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="17.5dp"
                            android:background="@android:color/transparent"
                            android:hint="제목을 입력해주세요"
                            android:maxLines="1"
                            android:textColorHint="@color/white_87"
                            android:textSize="16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toTopOf="@id/title_price_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/title_price_border"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginEnd="0.5dp"
                            android:background="@color/divider"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/market_used_sell_edit_title_textview" />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:font_name="Normal"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:gravity="center_vertical"
                            android:text="가격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_price_border" />


                        <EditText
                            android:id="@+id/market_used_sell_edit_money_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:font_name="Normal"
                            android:layout_marginStart="64dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="17.5dp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:background="@android:color/transparent"
                            android:hint="가격을 입력해주세요."
                            android:maxLines="1"
                            android:textColorHint="@color/white_87"
                            android:textSize="16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toTopOf="@id/price_thumbnail_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/textView3"
                            app:layout_constraintTop_toBottomOf="@+id/title_price_border"
                            app:layout_constraintVertical_chainStyle="spread_inside" />

                        <LinearLayout
                            android:id="@+id/price_thumbnail_border"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginEnd="0.5dp"
                            android:background="@color/divider"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/market_used_sell_edit_money_edittext" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            app:font_name="Normal"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginBottom="18.5dp"
                            android:gravity="center_vertical"
                            android:text="대표이미지"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_phone_number_border"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/price_thumbnail_border"
                            app:layout_constraintVertical_bias="0.5" />

                        <Button
                            android:id="@+id/market_used_sell_edit_thumbnail_change_button"
                            android:layout_width="wrap_content"
                            android:layout_height="28.7dp"
                            app:font_name="Normal"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="13.5dp"
                            android:layout_marginBottom="14.8dp"
                            android:background="@drawable/bg_warm_grey_rectangle"
                            android:text="이미지 첨부"
                            android:textSize="16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_phone_number_border"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="@+id/price_thumbnail_border"
                            app:layout_constraintVertical_bias="0.5" />


                        <ImageView
                            android:id="@+id/market_used_sell_edit_thumbnail_imageview"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_noimage_big"
                            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_phone_number_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/market_used_sell_edit_thumbnail_change_button"
                            app:layout_constraintTop_toBottomOf="@+id/price_thumbnail_border" />

                        <LinearLayout
                            android:id="@+id/thumbnail_phone_number_border"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginEnd="0.5dp"
                            android:background="@color/divider"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/market_used_sell_edit_thumbnail_imageview" />


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:font_name="Normal"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="52.5dp"
                            android:layout_marginTop="18.5dp"
                            android:gravity="center_vertical"
                            android:text="연락처"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/thumbnail_phone_number_border" />


                        <EditText
                            android:id="@+id/market_used_sell_edit_edittext_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:font_name="Normal"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:color/transparent"
                            android:hint="연락처를 입력해주세요."
                            android:inputType="phone"
                            android:maxLength="13"
                            android:maxLines="1"
                            tools:text="010-2927-2538"
                            android:textColorHint="@color/white_87"
                            android:textSize="16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toTopOf="@id/phone_number_status_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/market_used_sell_edit_money_edittext"
                            app:layout_constraintTop_toBottomOf="@+id/market_used_sell_edit_phone_status_radiobutton_group"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintVertical_chainStyle="spread_inside" />

                        <RadioGroup
                            android:id="@+id/market_used_sell_edit_phone_status_radiobutton_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toEndOf="@+id/textView5"
                            app:layout_constraintTop_toBottomOf="@+id/thumbnail_phone_number_border">

                            <RadioButton
                                android:id="@+id/market_used_sell_edit_is_phone_public_radiobutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font_name="Normal"
                                android:layout_marginStart="51dp"
                                android:buttonTint="@color/light_navy"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="8dp"
                                android:text="공개"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                               />


                            <RadioButton
                                android:id="@+id/market_used_sell_edit_is_phone_private_radiobutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font_name="Normal"
                                android:layout_marginStart="17dp"
                                android:layout_marginTop="12dp"
                                android:buttonTint="@color/light_navy"
                                android:checked="true"
                                android:text="비공개"
                                android:textColor="@color/black"
                                android:textSize="16sp"

                             />

                        </RadioGroup>
                        
                        <LinearLayout
                            android:id="@+id/phone_number_status_border"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_marginTop="17.5dp"
                            android:layout_marginEnd="0.5dp"
                            android:background="@color/divider"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/market_used_sell_edit_edittext_phone_num" />


                        <RadioGroup
                            android:id="@+id/market_used_sell_edit_selling_status_radiobutton_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="18.5dp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/border"
                            app:layout_constraintTop_toBottomOf="@+id/phone_number_status_border">

                            <RadioButton
                                android:id="@+id/market_used_sell_edit_is_selling_radiobutton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:font_name="Normal"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_navy"
                                android:checked="true"
                                android:text="판매중"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <RadioButton
                                android:id="@+id/market_used_sell_edit_is_stop_selling_radiobutton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:font_name="Normal"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_navy"
                                android:text="판매중지"
                                android:textColor="@color/black"
                                android:textSize="16sp"

                                />

                            <RadioButton
                                android:id="@+id/market_used_sell_edit_is_complete_selling_radiobutton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:font_name="Normal"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_navy"
                                android:text="판매완료"
                                android:textColor="@color/black"
                                android:textSize="16sp"

                                />

                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/border"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="0.5dp"
                            android:background="@color/divider"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/market_used_sell_edit_selling_status_radiobutton_group" />

                        <EditText
                            android:id="@+id/market_used_sell_edit_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:font_name="Custom4"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="18.5dp"
                            android:layout_marginBottom="17.5dp"
                            android:background="@android:color/transparent"
                            android:hint="내용을 입력해주세요."
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="10sp"
                            android:paddingBottom="63dp"
                            android:textColorHint="@color/white_87"
                            android:textSize="16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/border"
                            app:layout_constraintVertical_bias="1.0"
                            tools:text="" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </RelativeLayout>

        <include layout="@layout/base_navigation_bar_bottom" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <include layout="@layout/base_navigation_drawer_left" />

</androidx.drawerlayout.widget.DrawerLayout>