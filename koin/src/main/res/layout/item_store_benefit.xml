<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/store_benefit_item_layout"
        android:layout_width="175dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/button_rect_primary_line_radius_5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <ImageView
            android:id="@+id/benefit_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@drawable/ic_trash_can" />
        <TextView
            android:id="@+id/benefit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/primary_500"
            android:textSize="13sp"
            tools:text="최소주문금액 0원" />
    </LinearLayout>
</layout>