<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <in.koreatech.koin.core.appbar.AppBarBase
                android:id="@+id/koin_base_app_bar_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="56dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/event_create_shops_spinner"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_rect_blue"/>

                    <EditText
                        android:id="@+id/event_detail_title_edittext"
                        android:layout_width="300dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginBottom="19dp"
                        android:background="@drawable/bg_white"
                        android:hint="제목을 입력해주세요(최대 15자)"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="2sp"
                        android:textColorHint="#e7e7e7"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:orientation="horizontal"></LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginBottom="19dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/event_detail_event_title_edittext"
                            android:layout_width="300dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="19dp"
                            android:background="@drawable/bg_white"
                            android:hint="홍보 문구를 입력해주세요.(최대 50자)"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="2sp"
                            android:textColorHint="#e7e7e7"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/event_create_question_mark_textview"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="18dp"
                            android:text="\?"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_ring_squash"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/event_border"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/event_create_choose_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/event_calender_reck_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/bg_rect_blue"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/event_calender_imageview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_event_calender" />

                            <TextView
                                android:id="@+id/event_create_calender_startdate_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="27dp"
                                android:paddingEnd="27dp"
                                android:gravity="center"
                                tools:text="2020-03-26"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginEnd="10dp"
                            android:lineSpacingExtra="4sp"
                            android:text="~"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"/>

                        <LinearLayout
                            android:id="@+id/event_calender2_reck_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/bg_rect_blue"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_event_calender" />

                            <TextView
                                android:id="@+id/event_create_calender_enddate_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="27dp"
                                android:paddingEnd="27dp"
                                android:gravity="center"
                                tools:text="2020.03.25"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <in.koreatech.koin.ui.board.KoinRichEditor
                        android:id="@+id/event_create_content"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        app:auto_focus="false"
                        app:placeholder="추가 내용을 입력하세요..."
                        app:render_type="Editor" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
            <HorizontalScrollView
                android:id="@+id/event_editor_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e6e6"
                android:scrollbars="none"
                android:layout_above="@id/adverting_navigation_bar_bottom">
                <include layout="@layout/editor_toolbar_linearlayout_horizontal"/>
            </HorizontalScrollView>

            <include
                android:id="@+id/adverting_navigation_bar_bottom"
                layout="@layout/base_navigation_bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/base_navigation_drawer_left" />


</androidx.drawerlayout.widget.DrawerLayout>