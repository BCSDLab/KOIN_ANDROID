<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <in.koreatech.koin.core.bases.KoinBaseAppbarDark
                android:id="@+id/koin_base_app_bar_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="홍보게시판" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="56dp"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/event_create_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="1000dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="179dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/bg_rect_blue"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="8dp"
                                    app:srcCompat="@drawable/ic_ad_store" />

                                <TextView
                                    android:id="@+id/event_create_activity_store_button"
                                    android:layout_width="120dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:background="#ffffff"
                                    android:gravity="center"
                                    android:lineSpacingExtra="2sp"
                                    android:text="노랑통닭"
                                    android:textColor="#69717a"
                                    android:textSize="13sp" />

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_marginTop="5dp"
                                    app:srcCompat="@drawable/ic_arrow" />
                            </LinearLayout>


                            <EditText
                                android:id="@+id/event_detail_title_edittext"
                                android:layout_width="300dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginBottom="19dp"
                                android:background="@drawable/bg_white"
                                android:hint="제목을 입력해주세요(최대 20자)"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="2sp"
                                android:textColorHint="#e7e7e7"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider"
                                android:orientation="horizontal"></LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginBottom="19dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/event_detail_event_title_edittext"
                                    android:layout_width="300dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginBottom="19dp"
                                    android:background="@drawable/bg_white"
                                    android:hint="홍보 문구를 입력해주세요.(최대 50자)"
                                    android:letterSpacing="-0.05"
                                    android:lineSpacingExtra="2sp"
                                    android:textColorHint="#e7e7e7"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/event_create_question_mark_imageview"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="18dp"
                                    android:src="@drawable/ic_question_mark" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/event_border"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/event_create_choose_date_layout"
                                android:layout_width="match_parent"
                                android:layout_height="59dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/event_calender_reck_layout"
                                    android:layout_width="149dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="14dp"
                                    android:background="@drawable/bg_rect_blue"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/event_calender_imageview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/ic_ad_calender" />

                                    <TextView
                                        android:id="@+id/event_create_calender_startdate_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:layout_marginBottom="7dp"
                                        android:layout_weight="1" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="11dp"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginBottom="18dp"
                                    android:lineSpacingExtra="4sp"
                                    android:text="~"
                                    android:textColor="@color/light_navy"
                                    android:textSize="13sp"
                                    tools:text="~" />

                                <LinearLayout
                                    android:id="@+id/event_calender2_reck_layout"
                                    android:layout_width="149dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="14dp"
                                    android:background="@drawable/bg_rect_blue"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/ic_ad_calender" />

                                    <TextView
                                        android:id="@+id/event_create_calender_enddate_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:layout_marginBottom="7dp"
                                        android:layout_weight="1" />
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <in.koreatech.koin.service_board.ui.KoinRichEditor
                                android:id="@+id/event_create_content"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                app:auto_focus="false"
                                app:placeholder="추가 내용을 입력하세요..."
                                app:render_type="Editor" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/event_create_question_info_frame_layout"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="145dp"
                            android:layout_marginStart="70dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/question_info" />
                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/event_editor_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e6e6"
                android:scrollbars="none"
                android:layout_above="@id/adverting_navigation_bar_bottom">
                <include layout="@layout/editor_toolbar_linearlayout_horizontal"/>
            </HorizontalScrollView>

            <include
                android:id="@+id/adverting_navigation_bar_bottom"
                layout="@layout/base_navigation_bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <include layout="@layout/base_navigation_drawer_left" />


</androidx.drawerlayout.widget.DrawerLayout>