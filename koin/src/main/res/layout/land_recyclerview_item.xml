<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="140dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="127dp"

        android:background="@drawable/bg_rect_cloudy_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:id="@+id/view"
            android:layout_width="158dp"
            android:layout_height="61dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/land_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="IH (국제학사)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/month_fee_linearlayout"
            android:layout_width="158dp"
            android:layout_height="64dp"
            android:layout_marginLeft="1dp"
            android:background="@color/gray3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month_textview"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_darkgreen_radius_18dp"
                    android:gravity="center"
                    android:lineSpacingExtra="12sp"
                    android:text="월세"
                    android:textColor="#f3f3f3"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/month_fee_textview"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:lineSpacingExtra="10sp"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColor="@color/warm_grey_two"
                    android:textSize="12sp"
                    tools:text="880만원 (1학기)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/charter_textview"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_rect_squash_radius_18dp"
                    android:gravity="center"
                    android:lineSpacingExtra="12sp"
                    android:text="전세"
                    android:textColor="#f3f3f3"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/charter_fee_textview"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:lineSpacingExtra="10sp"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColor="@color/warm_grey_two"
                    android:textSize="12sp"
                    tools:text="X" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>