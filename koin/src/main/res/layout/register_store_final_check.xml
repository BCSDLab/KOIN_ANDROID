<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
                <variable name="viewModelCheck"
                    type="in.koreatech.koin.ui.business.registerstore.viewmodel.RegisterStoreViewModel"/>
        </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingPrefix">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizental_0.07"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizental_0.56"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.56" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.111"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.111" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.26"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.33"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.59"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.59" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.70"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.70" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.92"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.85"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.93"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />


            <ImageButton
                android:id="@+id/back_button_in_basic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:src="@drawable/ic_arrow_back_for_register"

                app:layout_constraintBottom_toTopOf="@id/guideline_horizental_0.07"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.111"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/store_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 등록"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/back_button_in_basic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.33"
                app:layout_constraintBottom_toTopOf="@id/input_message"
                />

            <TextView
                android:id="@+id/input_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력하신 정보가 맞습니까?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/store_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.59"
                app:layout_constraintBottom_toTopOf="@+id/basic_info_input"
                />

            <TextView
                android:id="@+id/basic_info_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. 가게 정보 확인"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/input_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.33"
                app:layout_constraintBottom_toTopOf="@id/progress_bar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 / 4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/input_message"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.85"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_0.93"
                app:layout_constraintBottom_toTopOf="@id/progress_bar"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/basic_info_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/category_textview"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/progress_bar"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/category_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.category}"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/progress_bar"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게명"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/category_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/store_name_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.basicInfo.name}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/category_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소정보"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/store_name_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/address_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.basicInfo.address}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/store_name_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/address_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/phone_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.detailInfo.phoneNumber}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/address_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배달비"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/phone_number_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/delivery_fee_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.detailInfo.deliveryPrice}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/phone_number_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운영시간"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/delivery_fee_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/operating_time_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.timeString}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/delivery_fee_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:id="@+id/closed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.holiday}"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/operating_time_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타정보"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="33dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/closed_textview"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/etc_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModelCheck.detailInfo.description}"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/closed_textview"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.26"
                />

                    <CheckBox
                        android:id="@+id/check_box_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:allowClickWhenDisabled="false"
                        android:button="@drawable/checkbutton_round_squash_24dp"
                        android:text="배달 가능"
                        android:checked="@{viewModelCheck.detailInfo.deliveryOk}"
                        android:textColor="@color/colorSecondaryText"
                        app:layout_constraintBottom_toTopOf="@id/next_button"
                        app:layout_constraintEnd_toStartOf="@id/check_box_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etc_textview"
                        />

                    <CheckBox
                        android:id="@+id/check_box_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="카드 가능"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_marginRight="15dp"
                        android:checked="@{viewModelCheck.detailInfo.cardOk}"
                        android:button="@drawable/checkbutton_round_squash_24dp"
                        app:layout_constraintBottom_toTopOf="@id/next_button"
                        app:layout_constraintEnd_toStartOf="@id/check_box_account"
                        app:layout_constraintStart_toEndOf="@id/check_box_delivery"
                        app:layout_constraintTop_toBottomOf="@id/etc_textview"
                        />

                    <CheckBox
                        android:id="@+id/check_box_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:text="계좌 이체 가능"
                        android:button="@drawable/checkbutton_round_squash_24dp"
                        android:layout_marginRight="30dp"
                        android:checked="@{viewModelCheck.detailInfo.bankOk}"
                        app:layout_constraintTop_toBottomOf="@id/etc_textview"
                        app:layout_constraintBottom_toTopOf="@id/next_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/check_box_card"
                        />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:background="@color/colorPrimary"
                android:text="다음"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontName="Normal"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/check_box_account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.70"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>