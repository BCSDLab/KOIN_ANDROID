<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timetable_select_semester_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:includeFontPadding="false"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/user_lock_bottom_sheet_behavior"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_blue_rectangle"
        android:includeFontPadding="false"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Koin.Regular.15"
            android:textColor="@color/black"
            tools:text="저장" />

        <TextView
            android:id="@+id/timetable_select_semester_bottom_sheet_center_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="학기선택"
            android:textAppearance="@style/TextAppearance.Koin.Medium.15"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/timetable_elect_semester_bottom_sheet_right_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="완료"
            android:textAppearance="@style/TextAppearance.Koin.Regular.15"
            android:textColor="@color/black" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timetable_semester_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp" />

</LinearLayout>