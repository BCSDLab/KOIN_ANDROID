<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray18" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="8dp" android:right="16dp" android:top="8dp" android:left="16dp" />
                    <stroke android:width="1dp" android:color="@color/gray16" />
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_arrow_down_spinner"
                android:gravity="bottom|right" />
        </layer-list>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray18" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="8dp" android:right="16dp" android:top="8dp" android:left="16dp" />
                    <stroke android:width="1dp" android:color="@color/gray16" />
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_arrow_up_spinner"
                android:gravity="bottom|right" />
        </layer-list>
    </item>
</selector>