<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_shade_gray">

        <GridLayout
            android:id="@+id/bottom_copyright_shortcut_gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <TextView
                android:id="@+id/bottom_copyright_koreatech_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코리아텍 바로가기"
                android:textSize="12sp"
                android:textColor="@color/light_shade_gray"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/bottom_copyright_awoonuri_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아우누리 바로가기"
                android:textSize="12sp"
                android:textColor="@color/light_shade_gray"/>

            <TextView
                android:id="@+id/bottom_copyright_bcsdlab_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BCSD Lab 바로가기"
                android:textSize="12sp"
                android:textColor="@color/light_shade_gray" />

            <TextView
                android:id="@+id/bottom_copyright_privaypolicy_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 처리방침"
                android:textSize="12sp"
                android:textColor="@color/light_shade_gray" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_copyright_shortcut_gridlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_footer_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="COPYRIGHT © 2019 BCSD LAB ALL RIGHTS RESERVED."
                android:textSize="9sp"
                android:textColor="@color/default_side_header_font_color"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_facebook_initial_f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_home_gray"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>