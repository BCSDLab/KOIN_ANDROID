<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray4_top_border"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/base_navigation_bar_bottom_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:id="@+id/base_navigation_bar_bottom_home_linearlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_navigation_bar_bottom_home_imageview"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_bottom_home" />

                <TextView
                    android:id="@+id/base_navigation_bar_bottom_home_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="7dp"
                    android:text="홈"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_navigation_bar_bottom_category_linearlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_navigation_bar_bottom_category_imageview"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_bottom_category" />

                <TextView
                    android:id="@+id/base_navigation_bar_bottom_category_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="7dp"
                    android:text="카테고리"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_navigation_bar_bottom_search_linearlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_navigation_bar_bottom_search_imageview"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_search_menu" />

                <TextView
                    android:id="@+id/base_navigation_bar_bottom_search_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="7dp"
                    android:text="검색"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
